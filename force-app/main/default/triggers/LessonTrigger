        when BEFORE_INSERT{
             LessonTrigger.newLesson(Trigger.New);    
        }
        when BEFORE_UPDATE {
             
        }
        when BEFORE_DELETE{
            
        }
        when AFTER_INSERT{
            
        }
        when AFTER_UPDATE{
            
        }
        when AFTER_DELETE{
            
        }
        when AFTER_UNDELETE{
            
        }
    }
}